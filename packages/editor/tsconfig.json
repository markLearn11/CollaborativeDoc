{
  "extends": "../../packages/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2015", "DOM"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "module": "ESNext",
